<% layout("./layouts/boilerplate.ejs")%>

<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form method="post"  action="/signup">
                    <label class="form-label">Email id:</label>
                    <input name="email" type="text" placeholder="abc@email.com" class="form-control" required>
                    <br>
                    <label class="form-label">Username:</label>
                    <input name="username" type="text" placeholder="Username" class="form-control" required>
                    <!-- <div class="valid-feedback">Title added!</div>
                    <div class="invalid-feedback">Please add title!</div> -->
                    <br>
                    <label class="form-label">Password:</label>
                    <input name="password" type="password" placeholder="Enter Password" class="form-control" required>
                    <br>
                    <button class="btn btn-dark">Sign-up</button>
            </form>
        </div>
    </div>
</body>