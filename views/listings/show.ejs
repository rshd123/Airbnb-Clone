<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3><%= detail.title %></h3>
        </div>
    </div>
    
    <div class="card col-6 offset-2">
        <img src="<%= detail.image.url %>" class="card-img-top show-img" alt="listing_image">
        <br>
        <div class="card-body">
            <p class="card-text">
                <b>About:</b>
                <%= detail.description %><br>
                <b>Price:</b> &#8377; <%= detail.price.toLocaleString("en-IN") %>/night<br>
                <b>Location:</b>
                <%= detail.location %><br>
                <b>Country:</b>
                <%= detail.country %>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-1 offset-2">
            <button class="btn btn-dark">
                <a href="http://localhost:3000/listings/<%= detail._id %>/edit" style="text-decoration: none; color: white;">Edit</a>
            </button>
        </div>
        
        <div class="col-1">
            <form method="POST" action="/listings/<%= detail._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>

        <hr>
        
        <div class="col-8 offset-1">
            <h3>Leave a review</h3>
            <form method="POST" action="/listings/<%= detail._id %>/reviews" novalidate class="needs-validation">
                <div>
                    <label for="rating" class="form-label">Rating:</label><br>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" required>
                </div>
                <div>
                    <label for="comment" class="form-label">Comment:</label><br>
                    <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                    <div class="invalid-feedback">We kindly request you to add your experience in the comment box!</div>
                </div><br>
                <button class="btn btn-dark">Submit</button>
            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row" style="justify-content: center;">
                <% for (i of detail.reviews) { %>
                    <div class="card col-5 ms-2" style="border: 2px solid black !important;">
                        <div class="card-body">
                            <div class="card-text"><%=i.comment%></div>
                            <div class="card-text">Rating: <%=i.rating%>/5</div>
                        </div>
                        <form class="mb-1" method="POST" action="/listings/<%=detail._id%>/reviews/<%=i._id%>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete Review</button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
