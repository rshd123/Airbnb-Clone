<% layout("/layouts/boilerplate") %>

<body>
    <h4>All Lists!</h4>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let i of listData){%>
            <div class="card">
                <a href="/listings/<%= i.id%>"><img src="<%=i.image.url%>" class="card-img-top" alt="listing_image"
                        style="height: 18rem;"></a>
                <div class="card-body">
                    <a href="/listings/<%= i.id%>" style="text-decoration: none; color: black;"><b>
                            <%=i.title%>
                        </b> <br> </a>
                    &#8377; <%=i.price.toLocaleString("en-IN")%> /night
                </div>
            </div>
            <%}%>
    </div>
</body>